<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="phone"
            android:textSize="40sp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/one"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/four"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/xin"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="*"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/jin"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_number"
                    android:text="#"
                    android:textColor="#fff"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/call_in"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_call_push" />

                <Button
                    android:id="@+id/pack_up"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_finish" />
                <Button
                    android:id="@+id/delete"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_del" />
            </TableRow>
        </TableLayout>

    </LinearLayout>


</FrameLayout>
